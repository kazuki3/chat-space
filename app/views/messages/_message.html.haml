.chat-main__message.clearfix{"data-id": "#{message.id}"}
  .chat-main__message-name
    = message.user.name
  .chat-main__message-date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-main__message-body
  - if message.message.present?
    = message.message
  - if message.image.present?
    = image_tag message.image.url
