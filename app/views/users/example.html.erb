<div class='chat-main__footer'
  %form{class: "chat-main__footer-form"}
    .chat-main__footer-body
      %input{name: "message[body]", placeholder: "type a message", class: "chat-footer__body--message"}
      %label{class: "chat-footer__body--chat-file", for: "message-image"}
        %i.fa.fa-image
        %input{type: "file", class: "chat-footer__body--image", id: "message-image"}
    %input{type: "submit", value: "send", class: "chat-footer__body--submit"}
